//
// Global styles and fun stuff
// –––––––––––––––––––––––––––––––––––––––––––


// Variables
$maxSiteWidth = 1140px
$desktopWidth = 940px
$tabletWidth  = 720px
$mobileWidth  = 100%


// Repsonive scale, reference: http://jenius.github.io/rupture/
scale           = 0px 768px 992px 1200px
mobile-cutoff   = 768px
tablet-cutoff   = 992px
desktop-cutoff  = 1200px

// custom image base path for roots mixins
img-path = ''

// support for old IE
support-for-ie = false

// progressive IE (http://css3pie.com/)
pie-enabled = false
pie-path = '/pie.htc'


//
// Global layout
// –––––––––––––––––––––

*
  box-sizing border-box

body, html
  margin 0
  padding 0

// Main responsive template styles here
section
  padding rem(70px) 0

.center
  position relative
  clear both
  margin 0 auto
  width $maxSiteWidth

  +below(1200px)
    width 90%
    margin 0 5%

//
// Utility classes
// –––––––––––––––––––––
.circle
  border-radius 50%

nav[role='navigation']
  ul
    inline-list()
