col = lost-column

col($x)
  lost-column: x


// base
@import "_base/mixins"
@import "_base/globals"
@import "_base/colors"
@import "_base/typography"
@import "_base/animations"

// components
@import "_components/footer"
@import "_components/header"
@import "_components/buttons"

// pages
@import "_pages/*"

section
  lost-center: 1140px;
  div
    lost-column: 1/3 0 0;
    border-top: 1px solid transparent
    ratio-box(1.6/1)
    &:first-child
      lost-column: 2/3 0 0;
      background: #ddd
    &:nth-child(2)
      background: #ccc
    &:nth-child(3)
      background: #bbb
    &:nth-child(4)
      background: blue
